<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgrammesSecu.Views.ServerPage"
             Shell.NavBarIsVisible="False"
             BackgroundImageSource="background1.png"
             Title="ServerPage">
    <VerticalStackLayout WidthRequest="200"
                         Margin="300"
                         Spacing="20"
                         HorizontalOptions="Center">
        <Label 
            Text="Entrez l'adresse du serveur"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Server}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               WidthRequest="200"/>
        <Button Command="{Binding Path=SetServerCommand}"
                Text="Envoyez"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                 WidthRequest="200"
                CornerRadius="20" RotationX="20"
                />
    </VerticalStackLayout>
    
    
</ContentPage>